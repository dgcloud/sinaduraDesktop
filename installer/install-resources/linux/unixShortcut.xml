<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
<programGroup defaultName="Office" location="applications" />
	<shortcut name="Sinadura - Firma Digital"
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		target="$INSTALL_PATH/bin/sinadura.sh"
		iconFile="$INSTALL_PATH/resources/images/sinadura48.png"
		iconIndex="0"
		workingDirectory="$INSTALL_PATH/"
		description="Starts Sinadura - Firma Digital"
		type="Application"
		encoding="UTF-8"
		terminal="false"
		KdeSubstUID="false"
		initialState="normal"
		categories=""
		createForAll="true">
		<createForPack name="sinadura" />
	</shortcut>

	<shortcut name="Uninstall Sinadura - Firma Digital"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"
		target="java"
		commandLine="-jar uninstaller.jar"
		iconFile="trashcan_empty"
		iconIndex="0"
		workingDirectory="$INSTALL_PATH/Uninstaller/"
		description="Uninstall Sinadura - Firma Digital"
		type="Application"
		encoding="UTF-8"
		terminal="false"
		KdeSubstUID="false"
		initialState="normal"
		categories=""
		createForAll="true">
		<createForPack name="sinadura" />
	</shortcut>
</izpack:shortcuts>